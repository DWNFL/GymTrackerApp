<UserControl x:Class="GymTrackerApp.Views.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GymTrackerApp.ViewModels"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:ProgressViewModel}"
             d:DesignHeight="400" d:DesignWidth="600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Прогресс по объёму"
                   HorizontalAlignment="Center"
                   Style="{StaticResource Header}"
                   Margin="0 0 0 20"/>

        <lvc:CartesianChart Grid.Row="1"
                            Series="{Binding Series}">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Labels="{Binding Labels}"
                          LabelsRotation="45"
                          Title="Дата"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis LabelFormatter="{Binding YFormatter}"
                          Title="Объём (кг × повт)"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>