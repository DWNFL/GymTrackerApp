<UserControl x:Class="GymTrackerApp.Views.WorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GymTrackerApp.Views"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Content="Закончить"
                HorizontalAlignment="Right"
                Margin="0 20 20 0"
                Padding="3"/>
        <Grid Grid.Row="1"
              Margin="0 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Width="45"
                       Text="Время"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Grid.Row="0" 
                   Grid.Column="1"
                   Text="Объем"
                   Width="45"
                   HorizontalAlignment="Center"/>
        
            <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Text="Сеты"
                   Width="45"
                   HorizontalAlignment="Center"/>
            
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       FontSize="12"
                       Width="45"
                       HorizontalAlignment="Center"
                       Text="{Binding CurrentDuration, StringFormat={}{0:hh\\:mm\\:ss}}"/>            
            
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       FontSize="12"
                       Width="45"
                       HorizontalAlignment="Center"
                       Text="{Binding TotalWeight, StringFormat={}{0:N0}}"/>          
            
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       FontSize="12"
                       Width="45"
                       HorizontalAlignment="Center"
                       Text="{Binding TotalSets}"/>         
        </Grid>
        <Separator Grid.Row="2"
                   Margin="15 15" 
                   ></Separator>
        <Grid Grid.Row="3">
            <StackPanel >
                <ItemsControl ItemsSource="{Binding WorkoutExercises}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <StackPanel Margin="20 10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" ItemsSource="{Binding DataContext.ExerciseDefinitions,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              SelectedItem="{Binding ExerciseDefinition, Mode=TwoWay}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding MuscleGroup}"
                                                               FontSize="12"
                                                               Foreground="Gray"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    
                                    <Border Grid.Column="1"
                                            CornerRadius="6"
                                            Margin="8 0 0 0"
                                            VerticalAlignment="Center">

                                        <Button Command="{Binding DataContext.RemoveExerciseCommand,
                                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="6"
                                                            Width="32"
                                                            Height="32"
                                                            Background="#f0f0f0"
                                                            BorderBrush="#d0d0d0"
                                                            BorderThickness="1">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>

                                            <TextBlock FontSize="15" Text="✕" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Button>
                                    </Border>
                                </Grid>

                                <!-- СЕты -->
                                <ItemsControl ItemsSource="{Binding Sets}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="20 4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                
                                                <!-- Карточка -->
                                                <Border Grid.Column="0"
                                                        Padding="6"
                                                        Background="#f0f0f0"
                                                        BorderBrush="#d0d0d0"
                                                        BorderThickness="1"
                                                        CornerRadius="6">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                
                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding Order}"
                                                                   Margin="0 0 200 0"
                                                                   VerticalAlignment="Center"/>
                                
                                                        <TextBox Grid.Column="1"
                                                                 Text="{Binding Weight}"
                                                                 Margin="0 0 10 0"/>
                                
                                                        <TextBox Grid.Column="2"
                                                                 Text="{Binding Reps}"
                                                                 Margin="0 0 10 0"/>
                                                    </Grid>
                                                </Border>
                                
                                                <!-- Кнопка удаления -->
                                                <Border Grid.Column="1"
                                                        CornerRadius="6"
                                                        Margin="8 0 0 0"
                                                        VerticalAlignment="Center">

                                                    <Button Command="{Binding DataContext.RemoveSetCommand,
                                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border CornerRadius="6"
                                                                        Width="24"
                                                                        Height="24"
                                                                        Background="#f0f0f0"
                                                                        BorderBrush="#d0d0d0"
                                                                        BorderThickness="1">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>

                                                        <TextBlock Text="✕" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Button>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ContentControl Margin="60 5 60  0">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <Button Content="Добавить сет"
                                                            Height="20"
                                                            Command="{Binding AddSetCommand }"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ContentControl.Style>
                                    
                                </ContentControl>
                            </StackPanel>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ContentControl Margin="30 10 30 0">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <Button Content="Добавить упражнение"
                                            Height="30"
                                            Command="{Binding StartAddExerciseCommand}"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAddingExercise}"
                                             Value="True">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <ComboBox ItemsSource="{Binding ExerciseDefinitions}"
                                                      SelectedItem="{Binding SelectedExerciseDefinition, Mode=TwoWay}"
                                                      IsDropDownOpen="{Binding IsComboOpen, Mode=TwoWay}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding MuscleGroup}"
                                                                       FontSize="12"
                                                                       Foreground="Gray"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
