<Application x:Class="GymTrackerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GymTrackerApp"
             xmlns:vm="clr-namespace:GymTrackerApp.ViewModels"
             xmlns:views="clr-namespace:GymTrackerApp.Views"
             xmlns:services="clr-namespace:GymTrackerApp.Services">
    <Application.Resources>
        <services:BoolToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="Header" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
        </Style>

        <Style x:Key="AddButton" TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <DataTemplate DataType="{x:Type vm:WorkoutsHistoryViewModel}">
            <views:WorkoutsHistoryView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:WorkoutViewModel}">
            <views:WorkoutView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:ProgressViewModel}">
            <views:ProgressView/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
