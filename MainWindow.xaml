<Window x:Class="GymTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GymTracker" Height="600" Width="700">

    <DockPanel>

        <Border DockPanel.Dock="Top" Background="#111" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="История"
                        Margin="0 0 10 0"
                        Padding="12,6"
                        Command="{Binding ShowHistoryCommand}"/>

                <Button Content="Новая тренировка"
                        Padding="12,6"
                        Command="{Binding StartNewWorkoutCommand}"/>
            </StackPanel>
        </Border>

        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>
