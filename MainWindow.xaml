<Window x:Class="GymTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GymTrackerApp.Views"
        xmlns:local="clr-namespace:GymTrackerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
        <DockPanel>

                <!-- Панель вкладок -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <Button Content="История"
                                Command="{Binding ShowHistoryCommand}" Margin="5"/>

                        <Button Content="Типы упражнений"
                                Command="{Binding ShowExercisesCommand}" Margin="5"/>

                        <Button Content="Графики"
                                Command="{Binding ShowChartsCommand}" Margin="5"/>
                </StackPanel>

                <!-- Текущее содержимое -->
                <ContentControl Content="{Binding CurrentViewModel}" />
        </DockPanel>
</Window>
